@{
	ViewBag.Title = "Main page";
}

@section header {
	<style>
		a {
			cursor: pointer;
			text-decoration: none !important;
		}

		.full-size {
			width: 100%;
		}
	</style>
}

<div ng-app="app.page-index" ng-controller="ctrl.page-index">

	<new-topic
		parent="newTopic"
		translate="Start new topic..."
		on-add="onAddNewTopic()">
	</new-topic>
	
	<table class="table table-bordered table-striped">
		<tr style="font-weight: bold;">
			<td>#</td>
			<td>
				Category
			</td>
			<td>
				Title
			</td>
			<td style="width: 170px;">Created</td>
			<td>#</td>
			<td>#</td>
		</tr>
		<tr ng-repeat="topic in topics track by $index">
			<td>{{ $index + 1 }}</td>
			<td>
				<a href class="text-success">{{ topic.Category }}</a>
			</td>
			<td>
				<a href="home/viewtopic?id={{ topic.Id }}">{{ topic.Title }}</a>
			</td>
			<td style="width: 170px;">{{ topic.Created | date:'medium' }}</td>
			<td>{{ topic.Links.length }}</td>
			<td><a ng-click="delelePost(topic.Id)" class="delLink" title="Delete post"><i class="icon-trash"></i></a></td>
		</tr>
	</table>
	
</div>

@section scripts
{
	<script>
		'use strict';

		(function(ng, show) {
			var app = ng.module('app.page-index', ['app.service', 'app.directive', 'ngSanitize']);

			app.controller('ctrl.page-index', function($scope, repoTopics) {
				var that = this;
				
				$scope.topics = [];
				$scope.newTopic = {};

				that.onError = function (err) {
					show.error(err.message, 'Error');
					console.log('Error', err);
				};
				
				that.clearTopic = function() {
					$scope.newTopic = {
						id: 0,
						Links: [],
						Category: 'Общее',
					};
				};

				$scope.onAddNewTopic = function() {
					var newTopicId = $scope.newTopic.Links[0];
					repoTopics.getById(newTopicId).then(function(res) {
						$scope.topics.splice(0, 0, res);
						that.clearTopic();
					});
				};

				$scope.delelePost = function(id) {
					repoTopics.del(id).then(function() {

						var ind = _.map($scope.topics, function(e) {
							return e.Id;
						}).indexOf(id);

						$scope.topics.splice(ind, 1);

						show.success('Topic deleted!', 'Success');
					}, that.onError);
				};

				// INIT -------------------------------------------
				(function init () {
					that.clearTopic();

					repoTopics.getAll().then(function (r) {
						$scope.topics = ng.copy(r);
						show.info('Load complete');
					}, that.onError);
				}());
			});

		})(angular, toastr);

	</script>
}